@page
@model TecPurisima.School.WebSite.Pages.Student.Edit

<div class="container-fluid">
    <div class="rom">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            <h2>Add</h2>
            <form method="post">
                <input type="hidden" asp-for="student.Id"/>
                <div class="form-group">
                    <label asp-for="student.FullName" ></label>
                    <input asp-for="student.FullName" class="form-control" maxlength="45"/>
                    <span class="text-danger" asp-validation-for="student.FullName"></span>
                </div>

                <div class="form-group">
                    <label asp-for="student.Age" ></label>
                    <input asp-for="student.Age" class="form-control" maxlength="45"/>
                    <span class="text-danger" asp-validation-for="student.Age"></span>
                </div>

                <div class="form-group">
                    <label asp-for="student.Gender" ></label>
                    <input asp-for="student.Gender" class="form-control" maxlength="45"/>
                    <span class="text-danger" asp-validation-for="student.Gender"></span>
                </div>

                <div class="form-group">
                    <label asp-for="student.CURP" ></label>
                    <input asp-for="student.CURP" class="form-control" maxlength="45"/>
                    <span class="text-danger" asp-validation-for="student.CURP"></span>
                </div>

                <div class="form-group">
                    <label asp-for="student.GroupId" ></label>
                    <input asp-for="student.GroupId" class="form-control" maxlength="45"/>
                    <span class="text-danger" asp-validation-for="student.GroupId"></span>
                </div>
                
                <div class="row">
                    <div class="col-md-12 text-right">
                        <button type="submit" class="btn btn-primary mr-3">Save</button>
                        <a class="btn btn-secondary">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
       

    </div>
</div>