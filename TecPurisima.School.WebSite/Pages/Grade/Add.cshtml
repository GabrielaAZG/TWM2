@page
@model TecPurisima.School.WebSite.Pages.Grade.Add

<div class="container-fluid">
    <div class="rom">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            <h2>Add</h2>
            <form method="post">
                <input type="hidden" asp-for="grade"/>
                <div class="form-group">
                    <label asp-for="grade.SchoolGrade" ></label>
                    <input asp-for="grade.SchoolGrade" class="form-control" maxlength="45"/>
                    <span class="text-danger" asp-validation-for="grade.SchoolGrade"></span>
                </div>
                
                <div class="row">
                    <div class="col-md-12 text-right">
                        <button type="submit" class="btn btn-primary mr-3">Save</button>
                        <a class="btn btn-secondary">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
       

    </div>
</div>