@page "{id:int}"
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model TecPurisima.School.WebSite.Pages.Group.Delete

<div class="container-fluid">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            <h2>Delete</h2>
            <form method="post">
                <input type="hidden" asp-for="Group.Id"/>
                <div class="form-group">
                    <label asp-for="Group.GroupName"></label>
                    <input readonly asp-for="Group.GroupName" class="form-control" maxlength="45"/>
                </div>

                <div class="form-group">
                    <label asp-for="Group.GradeId"></label>
                    <input readonly asp-for="Group.GradeId" class="form-control" maxlength="45"/>
                </div>

                <div class="form-group">
                    <label asp-for="Group.TeacherId"></label>
                    <input readonly asp-for="Group.TeacherId" class="form-control" maxlength="45"/>
                </div>
                
                <div class="row">
                    <div class="col-md-12 text-right">
                        <button type="submit" class="btn btn-danger mr-3">Delete</button>
                        <a class="btn btn-secondary">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-1"></div>

    </div>
</div>