@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model TecPurisima.School.WebSite.Pages.Group.List

<div class="container-fluid">
    <form method="get">
        <div class="row">
            <div class="col-md-8"></div>
            <div class="col-md-4">
                <br/>
                <button id = "btnSearch" class="btn btn-primary mr-3">Search</button>
                <a asp-area="" asp-page="/Group/Add"
                   class="btn btn-info" role="button">
                    <i class="fas fa-plus-circle me-2"></i>Add
                </a>
            </div>
        </div>
    </form>
    
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            <table class="table">
                <tr>
                    <th>Group Name</th>
                    <th>Grade ID</th>
                    <th>Teacher ID</th>
                </tr>
                @foreach (var group in @Model.Groups)
                {
                    <tr>
                        <td>@group.GroupName</td>
                        <td>@group.GradeId</td>
                        <td>@group.TeacherId</td>
                        
                        <td>
                            <a asp-area="" asp-page="/Group/Edit" asp-route-id="@group.Id"
                               class="btn btn-primary" role="button">Edit</a>
                            <a asp-area="" asp-page="/Group/Delete" asp-route-id="@group.Id"
                               class="btn btn-danger" role="button">Delete</a>
                            
                        </td>
                    </tr>
                }
            </table>
        </div>
        <div class="col-md-1"></div>
    </div>
</div>